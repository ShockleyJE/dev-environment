#!/usr/bin/env bash

if [[ "$(uname)" == "Linux" ]]; then
    NAME=$(grep '^NAME=' /etc/os-release | cut -d '=' -f 2- | tr -d '"')
    if [[ "$NAME" == "Ubuntu" ]]; then
        echo "Installing for Ubuntu"
        chmod +x ./ubuntu && ./ubuntu
    fi
fi

if [[ "$(uname)" == "Darwin" ]]; then
    echo "Installing for MacOS"
    chmod +x ./macos && ./macos
fi

